class Solution {
public:
    int totalMoney(int n) {
        int sum=0;
        int c=0;
        for(int i=0;i<n;i++)
        {
            for(int j=1;j<=7;j++)
            {    
              if(c==n)
                  return sum;
                sum=sum+i+j;
                
                c++;
                 
                
                
            }
        }
        return sum;
    }
};
